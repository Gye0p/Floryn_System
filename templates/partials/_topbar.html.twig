{# ðŸŒ¸ Top Navigation Bar Partial - Perfectly Aligned with Sidebar #}
<div class="w-full flex items-center justify-between bg-gradient-to-r from-[#5E548E] to-[#4C4375] shadow-lg border-b border-[#4C4375]/30 px-6 sticky top-0 z-30" style="height: 79px;">


  {# ðŸŒ¿ Left Section â€” Page Title & Menu (mobile toggle) #}
  <div class="flex items-center space-x-4">
    <button class="md:hidden text-white hover:text-[#FFF8F0] transition duration-200">
      <i class="fas fa-bars text-xl"></i>
    </button>
    <h1 class="text-lg font-semibold text-white tracking-wide">
      {% block page_title %}Dashboard{% endblock %}
    </h1>
  </div>

  {# ðŸŒº Right Section â€” Notifications, Settings, Profile #}
  <div class="flex items-center space-x-5">

    {# Notification Icon #}
    <a href="{{ path('app_notification_log_index') }}" class="relative p-2 text-white hover:bg-white/10 rounded-lg transition-all duration-200" title="View Notifications">
      <i class="fas fa-bell text-lg"></i>
    </a>
    <div class="flex items-center ml-4 pl-4 border-l border-white/20">
      <img src="https://ui-avatars.com/api/?name={{ app.user.username|url_encode }}&background=39A8C9&color=fff"
           alt="User Avatar"
           class="h-9 w-9 rounded-full border-2 border-white/40 shadow-sm" />
      <div class="hidden sm:block ml-2 leading-tight">
        <p class="text-sm font-medium text-white">
          {% if is_granted('ROLE_ADMIN') %}
            Administrator
          {% else %}
            Staff Member
          {% endif %}
        </p>
        <p class="text-xs text-[#FFF8F0]/80">{{ app.user.username }}</p>
      </div>
    </div>
  </div>
</div>