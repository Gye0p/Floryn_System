<!doctype html>
<html lang="en" class="h-full bg-[#f9fafb]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}Floryn Garden â€” Flower Management{% endblock %}</title>

    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:wght@400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  </head>

 <body class="h-screen bg-[#f9fafb] flex" style="font-family:'Inter',sans-serif;color:#1a2535;" data-controller="sidebar">
  
  <!-- Mobile overlay -->
  <div data-sidebar-target="overlay"
       data-action="click->sidebar#close"
       class="fixed inset-0 z-40 bg-black/40 backdrop-blur-sm hidden md:hidden transition-opacity"></div>

  <!-- Sidebar -->
  <aside data-sidebar-target="drawer"
         class="fixed top-0 left-0 h-full z-50 -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out"
         style="width:240px;">
    {% include 'partials/_sidebar.html.twig' %}
  </aside>

  <!-- Main wrapper -->
  <div class="flex flex-col flex-1 relative overflow-hidden md:ml-[240px]">
    
    <!-- Topbar -->
    <header class="sticky top-0 z-30 bg-white border-b" style="border-color:#e8edf2;">
      {% include 'partials/_topbar.html.twig' %}
    </header>

    <!-- Scrollable Main Content -->
    <main class="flex-1 overflow-y-auto bg-[#f9fafb] p-4 md:px-8 md:py-7">
      <div class="max-w-7xl mx-auto">
        {# Flash Messages #}
        {% for type, messages in app.flashes %}
          {% for message in messages %}
            <div data-controller="flash" data-flash-delay-value="5000"
                 class="rounded-xl p-4 mb-6 {% if type == 'success' %}bg-[#e8f7eb] border border-[#c2e7c9]{% elseif type == 'error' %}bg-red-50 border border-red-200{% elseif type == 'warning' %}bg-yellow-50 border border-yellow-200{% else %}bg-[#eaeefc] border border-[#c5d0f0]{% endif %} animate-fade-in">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  {% if type == 'success' %}
                    <i class="fas fa-check-circle text-[#2d8a4e] text-lg"></i>
                  {% elseif type == 'error' %}
                    <i class="fas fa-exclamation-circle text-red-600 text-lg"></i>
                  {% elseif type == 'warning' %}
                    <i class="fas fa-exclamation-triangle text-yellow-600 text-lg"></i>
                  {% else %}
                    <i class="fas fa-info-circle text-[#4265d6] text-lg"></i>
                  {% endif %}
                </div>
                <div class="ml-3 flex-1">
                  <p class="text-sm font-medium {% if type == 'success' %}text-[#2d8a4e]{% elseif type == 'error' %}text-red-800{% elseif type == 'warning' %}text-yellow-800{% else %}text-[#293855]{% endif %}">
                    {{ message }}
                  </p>
                </div>
                <div class="ml-auto pl-3">
                  <button type="button" class="inline-flex text-[#6b7a8d] hover:text-[#293855] focus:outline-none" data-action="flash#dismiss">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
      </div>
    </main>
  </div>

  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
  {% endblock %}
</body>

</html>