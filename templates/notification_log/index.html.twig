{% extends 'base.html.twig' %}

{% block title %}Notifications - Floryn Garden{% endblock %}
{% block page_title %}Notification Center{% endblock %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Notification Management</h1>
      <p class="mt-2 text-sm text-gray-700">Monitor communication logs, track message delivery, and manage customer notifications.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <a href="{{ path('app_notification_log_new') }}" 
         class="inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto transition-colors duration-200">
        <i class="fas fa-plus-circle mr-2"></i>
        Send Notification
      </a>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-bell text-indigo-400 text-2xl"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Notifications</dt>
              <dd class="text-lg font-medium text-gray-900">{{ notification_logs|length }}</dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-paper-plane text-green-400 text-2xl"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Sent</dt>
              <dd class="text-lg font-medium text-gray-900">
                {% set sent = 0 %}
                {% for log in notification_logs %}
                  {% if log.status == 'Sent' or log.status == 'Delivered' %}
                    {% set sent = sent + 1 %}
                  {% endif %}
                {% endfor %}
                {{ sent }}
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-hourglass-half text-yellow-400 text-2xl"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Pending</dt>
              <dd class="text-lg font-medium text-gray-900">
                {% set pending = 0 %}
                {% for log in notification_logs %}
                  {% if log.status == 'Pending' or log.status == 'Queued' %}
                    {% set pending = pending + 1 %}
                  {% endif %}
                {% endfor %}
                {{ pending }}
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-calendar-day text-blue-400 text-2xl"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Today's Messages</dt>
              <dd class="text-lg font-medium text-gray-900">
                {% set today = 0 %}
                {% for log in notification_logs %}
                  {% if log.dateSent and log.dateSent|date('Y-m-d') == date()|date('Y-m-d') %}
                    {% set today = today + 1 %}
                  {% endif %}
                {% endfor %}
                {{ today }}
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Notifications Table -->
  <div data-controller="floryn-table"
       data-floryn-table-page-size-value="10"
       data-floryn-table-sort-col-value="0"
       data-floryn-table-sort-dir-value="desc"
       data-floryn-table-no-sort-cols-value="[5]"
       data-floryn-table-entity-name-value="notifications">
  <div class="table-card">
    <div class="table-card-header">
      <h3>Notification Logs</h3>
    </div>
    
    {% if notification_logs is not empty %}

      <div class="fg-toolbar">
        <div class="fg-toolbar-left">
          <select data-floryn-table-target="pageSize" data-action="floryn-table#onPageSizeChange" class="fg-page-size">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="-1">All</option>
          </select>
          <button type="button" class="fg-export-btn" data-action="floryn-table#exportCopy" title="Copy"><i class="fas fa-copy"></i></button>
          <button type="button" class="fg-export-btn" data-action="floryn-table#exportCsv" title="CSV"><i class="fas fa-file-csv"></i></button>
          <button type="button" class="fg-export-btn" data-action="floryn-table#exportExcel" title="Excel"><i class="fas fa-file-excel"></i></button>
          <button type="button" class="fg-export-btn" data-action="floryn-table#exportPrint" title="Print"><i class="fas fa-print"></i></button>
        </div>
        <div class="fg-toolbar-right">
          <select data-floryn-table-target="columnFilter" data-action="floryn-table#onColumnFilter" data-col="3" class="fg-page-size">
            <option value="">All Channels</option>
            <option value="Email">Email</option>
            <option value="SMS">SMS</option>
          </select>
          <select data-floryn-table-target="columnFilter" data-action="floryn-table#onColumnFilter" data-col="4" class="fg-page-size">
            <option value="">All Status</option>
            <option value="Sent">Sent</option>
            <option value="Failed">Failed</option>
            <option value="Pending">Pending</option>
          </select>
          <button type="button" class="fg-export-btn" data-action="floryn-table#resetFilters" title="Reset filters"><i class="fas fa-redo"></i></button>
          <div class="fg-search">
            <i class="fas fa-search fg-search-icon"></i>
            <input type="text" data-floryn-table-target="search" data-action="input->floryn-table#onSearch" placeholder="Search notifications..." class="fg-search-input">
          </div>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="fg-table" data-floryn-table-target="table">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notification</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Channel</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for notification_log in notification_logs %}
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center">
                        <i class="fas fa-bell text-white"></i>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">#{{ notification_log.id }}</div>
                      <div class="text-sm text-gray-500">{{ notification_log.dateSent ? notification_log.dateSent|date('M j, Y g:i A') : 'Not sent yet' }}</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  {% if notification_log.customer %}
                    <div class="flex items-center">
                      <div class="h-8 w-8 rounded-full bg-gradient-to-br from-gray-400 to-gray-600 flex items-center justify-center mr-3">
                        <span class="text-white text-xs font-medium">
                          {{ notification_log.customer.fullName|first|upper }}
                        </span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900">{{ notification_log.customer.fullName }}</div>
                        <div class="text-sm text-gray-500">{{ notification_log.customer.email }}</div>
                      </div>
                    </div>
                  {% else %}
                    <span class="text-gray-400 italic">No customer</span>
                  {% endif %}
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 max-w-xs truncate" title="{{ notification_log.message }}">
                    {{ notification_log.message }}
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                    {% if notification_log.channel == 'Email' %}bg-blue-100 text-blue-800
                    {% elseif notification_log.channel == 'SMS' %}bg-green-100 text-green-800
                    {% elseif notification_log.channel == 'Push' %}bg-purple-100 text-purple-800
                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                    {% if notification_log.channel == 'Email' %}
                      <i class="fas fa-envelope mr-1"></i>
                    {% elseif notification_log.channel == 'SMS' %}
                      <i class="fas fa-sms mr-1"></i>
                    {% elseif notification_log.channel == 'Push' %}
                      <i class="fas fa-mobile-alt mr-1"></i>
                    {% else %}
                      <i class="fas fa-bell mr-1"></i>
                    {% endif %}
                    {{ notification_log.channel }}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                    {% if notification_log.status == 'Sent' or notification_log.status == 'Delivered' %}bg-green-100 text-green-800
                    {% elseif notification_log.status == 'Pending' or notification_log.status == 'Queued' %}bg-yellow-100 text-yellow-800
                    {% elseif notification_log.status == 'Processing' %}bg-blue-100 text-blue-800
                    {% else %}bg-red-100 text-red-800{% endif %}">
                    {% if notification_log.status == 'Sent' or notification_log.status == 'Delivered' %}
                      <i class="fas fa-check-circle mr-1"></i>
                    {% elseif notification_log.status == 'Pending' or notification_log.status == 'Queued' %}
                      <i class="fas fa-clock mr-1"></i>
                    {% elseif notification_log.status == 'Processing' %}
                      <i class="fas fa-sync mr-1"></i>
                    {% else %}
                      <i class="fas fa-times-circle mr-1"></i>
                    {% endif %}
                    {{ notification_log.status }}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="row-actions">
                    <a href="{{ path('app_notification_log_show', {'id': notification_log.id}) }}" 
                       class="row-action-btn" title="View">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('app_notification_log_edit', {'id': notification_log.id}) }}" 
                       class="row-action-btn" title="Edit">
                      <i class="fas fa-edit"></i>
                    </a>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <div class="fg-bottom-bar">
        <div class="fg-info" data-floryn-table-target="info"></div>
        <div class="fg-pagination" data-floryn-table-target="pagination"></div>
      </div>
    {% else %}
      <div class="text-center py-12">
        <i class="fas fa-bell-slash text-gray-400 text-6xl mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No notifications found</h3>
        <p class="text-gray-500 mb-6">Start communicating with customers by sending your first notification.</p>
        <a href="{{ path('app_notification_log_new') }}" 
           class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <i class="fas fa-plus-circle mr-2"></i>
          Send First Notification
        </a>
      </div>
    {% endif %}
  </div>
  </div>
</div>
{% endblock %}
