{% extends 'layouts/auth_base.html.twig' %}

{% block title %}Log in - Floryn Garden System{% endblock %}

{% block body %}
<div class="bg-white rounded-2xl shadow-2xl p-8">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-[#5E548E] to-[#4C4375] rounded-full mb-4">
            <i class="fas fa-leaf text-white text-2xl"></i>
        </div>
        <h1 class="text-3xl font-bold text-gray-800">Welcome Back</h1>
        <p class="text-gray-600 mt-2">Sign in to your Floryn Garden account</p>
    </div>

    <form method="post">
        {% if error %}
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
                <i class="fas fa-exclamation-circle mr-2"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="bg-blue-50 border-l-4 border-blue-500 text-blue-700 p-4 mb-6 rounded">
                You are logged in as {{ app.user.userIdentifier }}, 
                <a href="{{ path('app_logout') }}" class="underline font-semibold">Logout</a>
            </div>
        {% endif %}

        <div class="space-y-4">
            <div>
                <label for="inputUsername" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-user mr-2"></i>Username
                </label>
                <input 
                    type="text" 
                    value="{{ last_username }}" 
                    name="username" 
                    id="inputUsername" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E548E] focus:border-transparent transition" 
                    autocomplete="username" 
                    required 
                    autofocus
                    placeholder="Enter your username"
                >
            </div>

            <div>
                <label for="inputPassword" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-lock mr-2"></i>Password
                </label>
                <input 
                    type="password" 
                    name="password" 
                    id="inputPassword" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E548E] focus:border-transparent transition" 
                    autocomplete="current-password" 
                    required
                    placeholder="Enter your password"
                >
            </div>

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center">
                <input 
                    type="checkbox" 
                    name="_remember_me" 
                    id="remember_me"
                    class="w-4 h-4 text-[#5E548E] border-gray-300 rounded focus:ring-[#5E548E]"
                >
                <label for="remember_me" class="ml-2 text-sm text-gray-700">
                    Remember me
                </label>
            </div>

            <button 
                type="submit"
                class="w-full bg-gradient-to-r from-[#5E548E] to-[#4C4375] text-white font-semibold py-3 px-4 rounded-lg hover:from-[#4C4375] hover:to-[#3A3359] transition shadow-lg hover:shadow-xl"
            >
                <i class="fas fa-sign-in-alt mr-2"></i>Sign In
            </button>
        </div>

        <div class="mt-6 text-center">
            <p class="text-gray-600">
                Don't have an account? 
                <a href="{{ path('app_register') }}" class="text-[#5E548E] font-semibold hover:underline">
                    Register here
                </a>
            </p>
        </div>

        <!-- Divider -->
        <div class="relative my-6">
            <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
                <span class="px-3 bg-white text-gray-500">Or continue with</span>
            </div>
        </div>

        <!-- Google Sign-In Button -->
        <a href="{{ path('connect_google_start') }}" 
           class="w-full flex items-center justify-center gap-3 bg-white border-2 border-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-lg hover:bg-gray-50 hover:border-gray-400 transition shadow-sm">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Sign in with Google
        </a>
    </form>
</div>
{% endblock %}
