{% extends 'base.html.twig' %}

{% block title %}My Profile - Floryn Garden{% endblock %}
{% block page_title %}My Profile{% endblock %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">My Profile</h1>
    <p class="mt-2 text-sm text-gray-700">View and manage your account information and security settings.</p>
  </div>

  {% for message in app.flashes('success') %}
    <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded-lg flex items-center">
      <i class="fas fa-check-circle mr-2"></i>{{ message }}
    </div>
  {% endfor %}

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Profile Information -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-purple-50 to-indigo-50 border-b border-purple-200">
        <h3 class="text-lg font-medium text-purple-900 flex items-center">
          <i class="fas fa-user-circle mr-2 text-purple-600"></i>
          Account Information
        </h3>
      </div>
      <div class="p-6">
        <div class="flex items-center mb-6">
          <div class="flex-shrink-0 h-20 w-20">
            <div class="h-20 w-20 rounded-full bg-gradient-to-r from-[#5E548E] to-[#4C4375] flex items-center justify-center text-white text-3xl font-bold shadow-lg">
              {{ user.username|slice(0, 1)|upper }}
            </div>
          </div>
          <div class="ml-6">
            <h3 class="text-2xl font-bold text-gray-900">{{ user.username }}</h3>
            <div class="flex gap-2 mt-2">
              {% for role in user.roles %}
                {% if role == 'ROLE_ADMIN' %}
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                    <i class="fas fa-crown mr-1"></i>Admin
                  </span>
                {% elseif role == 'ROLE_STAFF' %}
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    <i class="fas fa-user-tie mr-1"></i>Staff
                  </span>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        <div class="border-t border-gray-200 pt-4 space-y-4">
          <div class="flex items-center">
            <span class="text-sm font-medium text-gray-500 w-24">User ID</span>
            <span class="text-sm text-gray-900">{{ user.id }}</span>
          </div>
          <div class="flex items-center">
            <span class="text-sm font-medium text-gray-500 w-24">Username</span>
            <span class="text-sm text-gray-900">{{ user.username }}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Security Actions -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-blue-200">
        <h3 class="text-lg font-medium text-blue-900 flex items-center">
          <i class="fas fa-shield-alt mr-2 text-blue-600"></i>
          Security
        </h3>
      </div>
      <div class="p-6 space-y-4">
        <div class="border-l-4 border-blue-500 bg-blue-50 p-4 rounded">
          <div class="flex items-start">
            <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
            <div>
              <h3 class="font-semibold text-blue-900 mb-1">Password Security</h3>
              <p class="text-sm text-blue-700">Keep your account secure by using a strong password and changing it regularly.</p>
            </div>
          </div>
        </div>

        <a href="{{ path('app_change_password') }}" 
           class="block w-full text-center inline-flex items-center justify-center px-4 py-3 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#5E548E] hover:bg-[#4C4375] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#5E548E] transition-colors">
          <i class="fas fa-key mr-2"></i>Change Password
        </a>

        <div class="border-l-4 border-yellow-500 bg-yellow-50 p-4 rounded">
          <div class="flex items-start">
            <i class="fas fa-exclamation-triangle text-yellow-600 mt-1 mr-3"></i>
            <div>
              <h3 class="font-semibold text-yellow-900 mb-1">Last Password Change</h3>
              <p class="text-sm text-yellow-700">Password changes are logged for security purposes.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Links (Admin) -->
  {% if is_granted('ROLE_ADMIN') %}
  <div class="mt-6 bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-slate-50 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 flex items-center">
        <i class="fas fa-link mr-2 text-gray-600"></i>
        Quick Links
      </h3>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="{{ path('app_user_index') }}" class="flex items-center p-4 border border-gray-200 rounded-lg hover:border-[#5E548E] hover:shadow-md transition-all duration-200 group">
          <div class="h-10 w-10 rounded-lg bg-purple-100 flex items-center justify-center mr-3 group-hover:bg-purple-200 transition-colors">
            <i class="fas fa-users text-[#5E548E]"></i>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 text-sm">User Management</h3>
            <p class="text-xs text-gray-500">Manage user accounts</p>
          </div>
        </a>
        <a href="{{ path('app_activity_log_index') }}" class="flex items-center p-4 border border-gray-200 rounded-lg hover:border-[#5E548E] hover:shadow-md transition-all duration-200 group">
          <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center mr-3 group-hover:bg-blue-200 transition-colors">
            <i class="fas fa-clipboard-list text-blue-600"></i>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 text-sm">Activity Logs</h3>
            <p class="text-xs text-gray-500">View system logs</p>
          </div>
        </a>
        <a href="{{ path('admin_dashboard') }}" class="flex items-center p-4 border border-gray-200 rounded-lg hover:border-[#5E548E] hover:shadow-md transition-all duration-200 group">
          <div class="h-10 w-10 rounded-lg bg-emerald-100 flex items-center justify-center mr-3 group-hover:bg-emerald-200 transition-colors">
            <i class="fas fa-chart-line text-emerald-600"></i>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 text-sm">Dashboard</h3>
            <p class="text-xs text-gray-500">View statistics</p>
          </div>
        </a>
      </div>
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}
