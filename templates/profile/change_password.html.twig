{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">
        <i class="fas fa-key text-[#5E548E] mr-2"></i>Change Password
    </h1>
    <p class="text-gray-600">Update your account password</p>
</div>

{% for message in app.flashes('error') %}
    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
        <i class="fas fa-exclamation-circle mr-2"></i>{{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('success') %}
    <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
        <i class="fas fa-check-circle mr-2"></i>{{ message }}
    </div>
{% endfor %}

<div class="bg-white rounded-xl shadow-lg p-6 max-w-2xl">
    <div class="mb-6 border-l-4 border-yellow-500 bg-yellow-50 p-4 rounded">
        <div class="flex items-start">
            <i class="fas fa-info-circle text-yellow-600 mt-1 mr-3"></i>
            <div>
                <h3 class="font-semibold text-yellow-900 mb-1">Password Requirements</h3>
                <ul class="text-sm text-yellow-700 list-disc list-inside">
                    <li>Minimum 6 characters</li>
                    <li>Must match confirmation</li>
                    <li>Different from current password recommended</li>
                </ul>
            </div>
        </div>
    </div>

    {{ form_start(form) }}
        <div class="space-y-4">
            <div>
                {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.currentPassword, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E548E] focus:border-transparent'}}) }}
                {{ form_errors(form.currentPassword) }}
            </div>

            <div>
                {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.newPassword.first, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E548E] focus:border-transparent'}}) }}
                {{ form_errors(form.newPassword.first) }}
            </div>

            <div>
                {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.newPassword.second, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E548E] focus:border-transparent'}}) }}
                {{ form_errors(form.newPassword.second) }}
            </div>
        </div>

        <div class="flex gap-3 mt-6">
            <button type="submit" class="bg-gradient-to-r from-[#5E548E] to-[#4C4375] text-white px-6 py-2 rounded-lg hover:from-[#4C4375] hover:to-[#3A3359] transition">
                <i class="fas fa-save mr-2"></i>Update Password
            </button>
            <a href="{{ path('app_profile') }}" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400 transition">
                <i class="fas fa-times mr-2"></i>Cancel
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
