{{ form_start(form, {'attr': {'class': 'space-y-0', 'novalidate': 'novalidate'}}) }}
<div class="form-section">
  <div class="form-section-header">
    <div class="section-icon blue"><i class="fas fa-truck"></i></div>
    <div>
      <h3>Supplier Information</h3>
      <p>Enter the supplier's company and contact details.</p>
    </div>
  </div>
  <div class="form-section-body">
    <div class="form-grid">
      <div class="form-group full">
        {{ form_label(form.supplierName, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.supplierName, {'attr': {'placeholder': 'Enter supplier company name'}}) }}
        {{ form_errors(form.supplierName) }}
      </div>
      <div class="form-group">
        {{ form_label(form.contactPerson, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.contactPerson, {'attr': {'placeholder': 'Contact person name'}}) }}
        {{ form_errors(form.contactPerson) }}
      </div>
      <div class="form-group">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.phone, {'attr': {'placeholder': '+1 (555) 123-4567'}}) }}
        {{ form_errors(form.phone) }}
      </div>
      <div class="form-group full">
        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'placeholder': 'supplier@company.com'}}) }}
        {{ form_errors(form.email) }}
      </div>
      <div class="form-group full">
        {{ form_label(form.address, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.address, {'attr': {'placeholder': 'Complete business address', 'rows': 3}}) }}
        {{ form_errors(form.address) }}
      </div>
      <div class="form-group">
        {{ form_label(form.deliverySchedule, null, {'label_attr': {'class': 'form-label'}}) }}
        <p class="form-hint">e.g., Daily, Weekly, Bi-weekly</p>
        {{ form_widget(form.deliverySchedule, {'attr': {'placeholder': 'e.g., Daily, Weekly'}}) }}
        {{ form_errors(form.deliverySchedule) }}
      </div>
      <div class="form-group">
        {{ form_label(form.dateAdded, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.dateAdded) }}
        {{ form_errors(form.dateAdded) }}
      </div>
    </div>
  </div>
</div>

<div class="form-actions">
  <a href="{{ path('app_supplier_index') }}" class="btn btn-outline"><i class="fas fa-arrow-left"></i> Cancel</a>
  <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('Save Supplier') }}</button>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}