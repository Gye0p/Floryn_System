{% extends 'base.html.twig' %}

{% block title %}Edit {{ supplier.supplierName }} - Floryn Garden{% endblock %}
{% block page_title %}Edit Supplier{% endblock %}

{% block body %}
<div class="page-wrapper px-4 sm:px-6 lg:px-8">
  <nav class="breadcrumb">
    <a href="{{ path('admin_dashboard') }}"><i class="fas fa-home"></i></a>
    <span class="separator">/</span>
    <a href="{{ path('app_supplier_index') }}">Suppliers</a>
    <span class="separator">/</span>
    <a href="{{ path('app_supplier_show', {'id': supplier.id}) }}">{{ supplier.supplierName }}</a>
    <span class="separator">/</span>
    <span class="current">Edit</span>
  </nav>

  <div class="page-header">
    <div class="page-header-info">
      <div class="avatar md" style="background:linear-gradient(135deg,#3b82f6,#1d4ed8);"><i class="fas fa-industry" style="font-size:18px;"></i></div>
      <div>
        <h1>Edit "{{ supplier.supplierName }}"</h1>
        <p class="subtitle">Update supplier information and delivery details.</p>
      </div>
    </div>
    <div class="page-header-actions">
      <a href="{{ path('app_supplier_show', {'id': supplier.id}) }}" class="btn btn-outline"><i class="fas fa-eye"></i> View Profile</a>
    </div>
  </div>

  <div style="max-width:900px;">
    {{ include('supplier/_form.html.twig', {button_label: 'Update Supplier'}) }}

    <div class="danger-zone">
      <div class="danger-zone-header">
        <i class="fas fa-exclamation-triangle"></i>
        <div>
          <h4>Danger Zone</h4>
          <p>Permanently delete this supplier. This will not remove the flowers associated with this supplier.</p>
        </div>
      </div>
      <div class="danger-zone-body">
        {{ include('supplier/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
</div>
{% endblock %}