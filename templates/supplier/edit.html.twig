{% extends 'base.html.twig' %}

{% block title %}Edit {{ supplier.supplierName }} - Floryn Garden{% endblock %}
{% block page_title %}Edit Supplier{% endblock %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
  <!-- Breadcrumb -->
  <div class="mb-6">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <a href="{{ path('admin_dashboard') }}" class="text-gray-400 hover:text-gray-500">
            <i class="fas fa-home"></i>
          </a>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <a href="{{ path('app_supplier_index') }}" class="text-sm font-medium text-gray-500 hover:text-gray-700">Suppliers</a>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <a href="{{ path('app_supplier_show', {'id': supplier.id}) }}" class="text-sm font-medium text-gray-500 hover:text-gray-700">{{ supplier.supplierName }}</a>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <span class="text-sm font-medium text-gray-500">Edit</span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="mt-4">
      <h1 class="text-2xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-edit text-blue-600 mr-3"></i>
        Edit "{{ supplier.supplierName }}"
      </h1>
      <p class="mt-2 text-sm text-gray-600">Update supplier information and delivery details.</p>
    </div>
  </div>

  <!-- Form and Actions -->
  <div class="max-w-4xl">
    <div class="bg-white rounded-lg shadow-lg p-8 border border-gray-200">
      {{ include('supplier/_form.html.twig', {button_label: 'Update Supplier'}) }}
    </div>

    <!-- Danger Zone -->
    <div class="mt-8">
      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <h3 class="text-lg font-medium text-red-900 mb-2 flex items-center">
          <i class="fas fa-exclamation-triangle text-red-600 mr-2"></i>
          Danger Zone
        </h3>
        <p class="text-sm text-red-700 mb-4">
          Permanently delete this supplier. This will not remove the flowers associated with this supplier.
        </p>
        {{ include('supplier/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
