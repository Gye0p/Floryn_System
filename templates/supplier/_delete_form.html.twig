<form method="post" action="{{ path('app_supplier_delete', {'id': supplier.id}) }}"
      data-controller="confirm"
      data-confirm-message-value="Are you sure you want to delete this supplier? This action cannot be undone."
      data-action="submit->confirm#ask">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
  <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete Supplier</button>
</form>