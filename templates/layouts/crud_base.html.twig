{% extends 'base.html.twig' %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
  <!-- Breadcrumb -->
  {% if breadcrumb is defined %}
  <div class="mb-6">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <div>
            <a href="{{ path('admin_dashboard') }}" class="text-[#6b7a8d] hover:text-[#293855] transition-colors">
              <i class="fas fa-home"></i>
              <span class="sr-only">Home</span>
            </a>
          </div>
        </li>
        {% for item in breadcrumb %}
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right mr-4" style="color:#6b7a8d;"></i>
            {% if item.url is defined %}
              <a href="{{ item.url }}" class="text-[13px] font-medium text-[#6b7a8d] hover:text-[#293855] transition-colors">{{ item.label }}</a>
            {% else %}
              <span style="font-size:13px;font-weight:500;color:#6b7a8d;">{{ item.label }}</span>
            {% endif %}
          </div>
        </li>
        {% endfor %}
      </ol>
    </nav>
  </div>
  {% endif %}

  <!-- Header -->
  {% if page_header is defined %}
  <div class="mb-6">
    <div class="{% if header_actions is defined %}sm:flex sm:items-center sm:justify-between{% endif %}">
      <div>
        <h1 class="flex items-center" style="font-family:'Bricolage Grotesque',serif;font-size:22px;font-weight:600;color:#293855;">
          {% if page_icon is defined %}<i class="{{ page_icon }} mr-3"></i>{% endif %}
          {{ page_header }}
        </h1>
        {% if page_description is defined %}
          <p style="margin-top:8px;font-size:13px;color:#6b7a8d;">{{ page_description }}</p>
        {% endif %}
      </div>
      
      {% if header_actions is defined %}
      <div class="mt-4 sm:mt-0 flex space-x-3">
        {% for action in header_actions %}
          <a href="{{ action.url }}" 
             class="inline-flex items-center rounded-lg transition-all duration-200 bg-[#4265d6] hover:bg-[#6b85e0]"
             style="padding:9px 18px;font-size:13px;font-weight:500;color:white;border:none;text-decoration:none;">
            {% if action.icon is defined %}<i class="{{ action.icon }} mr-2"></i>{% endif %}
            {{ action.label }}
          </a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>
  {% endif %}

  <!-- Content -->
  {% block crud_content %}{% endblock %}
</div>
{% endblock %}