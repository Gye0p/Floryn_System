{{ form_start(form, {'attr': {'class': 'space-y-0', 'novalidate': 'novalidate'}}) }}
<div class="form-section">
  <div class="form-section-header">
    <div class="section-icon blue"><i class="fas fa-user"></i></div>
    <div>
      <h3>Customer Information</h3>
      <p>Enter the customer's personal and contact details.</p>
    </div>
  </div>
  <div class="form-section-body">
    <div class="form-grid">
      <div class="form-group full">
        {{ form_label(form.fullName, null, {'label_attr': {'class': 'form-label'}}) }}
        <p class="form-hint">Letters and spaces only (no numbers or symbols)</p>
        {{ form_widget(form.fullName, {'attr': {'placeholder': 'Enter full name'}}) }}
        {{ form_errors(form.fullName) }}
      </div>
      <div class="form-group">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
        <p class="form-hint">Format: +639XXXXXXXXX (Philippine mobile number)</p>
        {{ form_widget(form.phone, {'attr': {'placeholder': '+639123456789'}}) }}
        {{ form_errors(form.phone) }}
      </div>
      <div class="form-group">
        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'placeholder': 'customer@example.com'}}) }}
        {{ form_errors(form.email) }}
      </div>
      <div class="form-group full">
        {{ form_label(form.address, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.address, {'attr': {'placeholder': 'Enter complete address', 'rows': 3}}) }}
        {{ form_errors(form.address) }}
      </div>
      <div class="form-group full">
        {{ form_label(form.dateRegistered, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.dateRegistered) }}
        {{ form_errors(form.dateRegistered) }}
      </div>
    </div>
  </div>
</div>

<div class="form-info-banner">
  <i class="fas fa-info-circle"></i>
  <div>
    <strong>Customer Data Policy</strong>
    <p>All customer information is securely stored and used only for order management.</p>
  </div>
</div>

<div class="form-actions">
  <a href="{{ path('app_customer_index') }}" class="btn btn-outline"><i class="fas fa-arrow-left"></i> Cancel</a>
  <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('Save Customer') }}</button>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}