{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <!-- Left Column -->
  <div class="space-y-6">
    <!-- Reservation Selection -->
    <div>
      {{ form_label(form.reservation, 'Reservation', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <i class="fas fa-shopping-cart text-gray-400"></i>
        </div>
        {{ form_widget(form.reservation, {
          'attr': {
            'class': 'pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm'
          }
        }) }}
      </div>
      {{ form_errors(form.reservation) }}
    </div>

    <!-- Payment Date -->
    <div>
      {{ form_label(form.paymentDate, 'Payment Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <i class="fas fa-calendar text-gray-400"></i>
        </div>
        {{ form_widget(form.paymentDate, {
          'attr': {
            'class': 'pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm'
          }
        }) }}
      </div>
      {{ form_errors(form.paymentDate) }}
    </div>

    <!-- Amount Paid -->
    <div>
      {{ form_label(form.amountPaid, 'Amount Paid', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <span class="text-gray-500 sm:text-sm">$</span>
        </div>
        {{ form_widget(form.amountPaid, {
          'attr': {
            'class': 'pl-8 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm',
            'placeholder': '0.00',
            'step': '0.01'
          }
        }) }}
      </div>
      {{ form_errors(form.amountPaid) }}
    </div>
  </div>

  <!-- Right Column -->
  <div class="space-y-6">
    <!-- Payment Method -->
    <div>
      {{ form_label(form.paymentMethod, 'Payment Method', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <i class="fas fa-credit-card text-gray-400"></i>
        </div>
        {{ form_widget(form.paymentMethod, {
          'attr': {
            'class': 'pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm'
          }
        }) }}
      </div>
      {{ form_errors(form.paymentMethod) }}
    </div>

    <!-- Reference Number -->
    <div>
      {{ form_label(form.referenceNo, 'Reference Number', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <i class="fas fa-hashtag text-gray-400"></i>
        </div>
        {{ form_widget(form.referenceNo, {
          'attr': {
            'class': 'pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm',
            'placeholder': 'Transaction reference number'
          }
        }) }}
      </div>
      {{ form_errors(form.referenceNo) }}
    </div>

    <!-- Status -->
    <div>
      {{ form_label(form.status, 'Payment Status', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <i class="fas fa-check-circle text-gray-400"></i>
        </div>
        {{ form_widget(form.status, {
          'attr': {
            'class': 'pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm'
          }
        }) }}
      </div>
      {{ form_errors(form.status) }}
    </div>
  </div>
</div>

<!-- Payment Information Card -->
<div class="bg-green-50 border border-green-200 rounded-lg p-4">
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <i class="fas fa-info-circle text-green-400 text-lg"></i>
    </div>
    <div class="ml-3">
      <h3 class="text-sm font-medium text-green-800">Payment Processing Information</h3>
      <div class="mt-2 text-sm text-green-700">
        <ul class="list-disc list-inside space-y-1">
          <li>Ensure the payment method matches the actual transaction</li>
          <li>Reference number should be unique for tracking purposes</li>
          <li>Payment status should reflect the current state of the transaction</li>
          <li>Double-check the amount before saving</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Form Actions -->
<div class="flex items-center justify-between pt-6 border-t border-gray-200">
  <a href="{{ path('app_payment_index') }}" 
     class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
    <i class="fas fa-times mr-2"></i>
    Cancel
  </a>
  
  <button type="submit" 
          class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
    <i class="fas fa-save mr-2"></i>
    {{ button_label|default('Record Payment') }}
  </button>
</div>

{{ form_end(form) }}
