{{ form_start(form) }}

<div class="form-section">
  <div class="form-section-header">
    <div class="section-icon green"><i class="fas fa-receipt"></i></div>
    <div>
      <h3>Transaction Details</h3>
      <p style="font-size:12px;color:var(--muted);margin-top:2px;">Link to a reservation and set the payment date</p>
    </div>
  </div>
  <div class="form-section-body">
    <div class="form-grid">
      <div class="form-group">
        {{ form_label(form.reservation, 'Reservation', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.reservation, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.reservation) }}
      </div>
      <div class="form-group">
        {{ form_label(form.paymentDate, 'Payment Date', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.paymentDate, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.paymentDate) }}
      </div>
    </div>
  </div>
</div>

<div class="form-section">
  <div class="form-section-header">
    <div class="section-icon blue"><i class="fas fa-credit-card"></i></div>
    <div>
      <h3>Payment Information</h3>
      <p style="font-size:12px;color:var(--muted);margin-top:2px;">Enter the amount, method, and reference details</p>
    </div>
  </div>
  <div class="form-section-body">
    <div class="form-grid">
      <div class="form-group">
        {{ form_label(form.amountPaid, 'Amount Paid', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.amountPaid, {'attr': {'class': 'form-control', 'placeholder': '0.00', 'step': '0.01'}}) }}
        {{ form_errors(form.amountPaid) }}
        <p class="form-hint">Enter the exact amount received</p>
      </div>
      <div class="form-group">
        {{ form_label(form.paymentMethod, 'Payment Method', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.paymentMethod, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.paymentMethod) }}
      </div>
      <div class="form-group">
        {{ form_label(form.referenceNo, 'Reference Number', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.referenceNo, {'attr': {'class': 'form-control', 'placeholder': 'Transaction reference number'}}) }}
        {{ form_errors(form.referenceNo) }}
        <p class="form-hint">Unique identifier for tracking this transaction</p>
      </div>
      <div class="form-group">
        {{ form_label(form.status, 'Payment Status', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.status) }}
      </div>
    </div>
  </div>
</div>

<div class="form-info-banner">
  <i class="fas fa-info-circle"></i>
  <div>
    <strong>Payment Processing Tips</strong>
    <ul style="margin-top:6px;padding-left:16px;list-style:disc;">
      <li>Ensure the payment method matches the actual transaction</li>
      <li>Reference number should be unique for tracking purposes</li>
      <li>Double-check the amount before saving</li>
    </ul>
  </div>
</div>

<div class="form-actions">
  <a href="{{ path('app_payment_index') }}" class="btn btn-outline"><i class="fas fa-arrow-left"></i> Cancel</a>
  <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('Record Payment') }}</button>
</div>

{{ form_end(form) }}