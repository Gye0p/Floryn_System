<form method="post" action="{{ path('app_payment_delete', {'id': payment.id}) }}"
      data-controller="confirm"
      data-confirm-message-value="Are you sure you want to delete this payment record? This action cannot be undone."
      data-action="submit->confirm#ask">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.id) }}">
  <button type="submit" class="btn btn-danger" style="width:100%;"><i class="fas fa-trash"></i> Delete Payment</button>
</form>