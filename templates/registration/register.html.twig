{% extends 'layouts/auth_base.html.twig' %}

{% block title %}Register - Floryn Garden System{% endblock %}

{% block body %}
<div class="bg-white rounded-2xl shadow-2xl p-8">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-[#5E548E] to-[#4C4375] rounded-full mb-4">
            <i class="fas fa-leaf text-white text-2xl"></i>
        </div>
        <h1 class="text-3xl font-bold text-gray-800">Join Floryn Garden</h1>
        <p class="text-gray-600 mt-2">Create your account to get started</p>
    </div>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        
        <div>
            {{ form_label(registrationForm.username, null, {
                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
            }) }}
            {{ form_widget(registrationForm.username, {
                'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E548E] focus:border-transparent transition', 'placeholder': 'Choose a username'}
            }) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword, 'Password', {
                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
            }) }}
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#5E548E] focus:border-transparent transition', 'placeholder': 'Create a strong password'}
            }) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="flex items-start">
            {{ form_widget(registrationForm.agreeTerms, {
                'attr': {'class': 'w-4 h-4 text-[#5E548E] border-gray-300 rounded focus:ring-[#5E548E] mt-1'}
            }) }}
            <div class="ml-2">
                {{ form_label(registrationForm.agreeTerms, null, {
                    'label_attr': {'class': 'text-sm text-gray-700'}
                }) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
        </div>

        <button 
            type="submit" 
            class="w-full bg-gradient-to-r from-[#5E548E] to-[#4C4375] text-white font-semibold py-3 px-4 rounded-lg hover:from-[#4C4375] hover:to-[#3A3359] transition shadow-lg hover:shadow-xl"
        >
            <i class="fas fa-user-plus mr-2"></i>Create Account
        </button>

    {{ form_end(registrationForm) }}

    <div class="mt-6 text-center">
        <p class="text-gray-600">
            Already have an account? 
            <a href="{{ path('app_login') }}" class="text-[#5E548E] font-semibold hover:underline">
                Sign in here
            </a>
        </p>
    </div>
</div>
{% endblock %}
