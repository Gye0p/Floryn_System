{% extends 'base.html.twig' %}

{% block title %}Customer Report - Floryn Garden{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto">
  {# Header #}
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-users text-purple-600 mr-3"></i>
        Customer Report
      </h1>
      <p class="mt-1 text-gray-600">Customer spending analysis and purchase patterns</p>
    </div>
    <div class="flex gap-2">
      <a href="{{ path('app_reports_export_customers_csv') }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm">
        <i class="fas fa-file-csv mr-2"></i> Export CSV
      </a>
      <a href="{{ path('app_reports_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition text-sm">
        <i class="fas fa-arrow-left mr-2"></i> Back
      </a>
    </div>
  </div>

  {# Summary #}
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-purple-500">
      <p class="text-sm text-gray-500">Total Customers</p>
      <p class="text-2xl font-bold text-purple-600">{{ total_customers }}</p>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500">
      <p class="text-sm text-gray-500">Total Revenue from Customers</p>
      {% set total_revenue = 0 %}
      {% for stat in customer_stats %}
        {% set total_revenue = total_revenue + stat.total_spent %}
      {% endfor %}
      <p class="text-2xl font-bold text-green-600">₱{{ total_revenue|number_format(2) }}</p>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500">
      <p class="text-sm text-gray-500">Avg Revenue per Customer</p>
      <p class="text-2xl font-bold text-blue-600">₱{{ total_customers > 0 ? (total_revenue / total_customers)|number_format(2) : '0.00' }}</p>
    </div>
  </div>

  {# Customer Stats Table #}
  <div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900"><i class="fas fa-chart-bar mr-2 text-[#5E548E]"></i>Customer Rankings (by Spending)</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200" id="customerTable">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Rank</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Total Orders</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Total Spent</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Avg Order</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Last Order</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for i, stat in customer_stats %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm">
              {% if i < 3 %}
                <span class="inline-flex items-center justify-center w-7 h-7 rounded-full text-xs font-bold {% if i == 0 %}bg-yellow-100 text-yellow-800{% elseif i == 1 %}bg-gray-200 text-gray-700{% else %}bg-orange-100 text-orange-800{% endif %}">
                  {{ i + 1 }}
                </span>
              {% else %}
                <span class="text-gray-500">{{ i + 1 }}</span>
              {% endif %}
            </td>
            <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ stat.customer.fullName }}</td>
            <td class="px-6 py-4 text-sm text-gray-500">{{ stat.customer.email }}</td>
            <td class="px-6 py-4 text-sm text-gray-700 text-right">{{ stat.total_orders }}</td>
            <td class="px-6 py-4 text-sm text-gray-900 text-right font-semibold">₱{{ stat.total_spent|number_format(2) }}</td>
            <td class="px-6 py-4 text-sm text-gray-700 text-right">₱{{ stat.avg_order_value|number_format(2) }}</td>
            <td class="px-6 py-4 text-sm text-gray-500">{{ stat.last_order_date ? stat.last_order_date|date('M d, Y') : 'Never' }}</td>
          </tr>
          {% else %}
          <tr>
            <td colspan="7" class="px-6 py-12 text-center text-gray-500">No customers found.</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
