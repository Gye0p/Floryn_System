{% extends 'base.html.twig' %}

{% block title %}Sold Flower History - Floryn Garden{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto">
  {# Header #}
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-history text-rose-500 mr-3"></i>
        Sold Flower History
      </h1>
      <p class="mt-1 text-gray-600">Track sold-out flowers, units sold, and revenue generated</p>
    </div>
    <a href="{{ path('app_reports_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition text-sm">
      <i class="fas fa-arrow-left mr-2"></i> Back
    </a>
  </div>

  {# Summary Cards #}
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-rose-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-500">Sold Out Flowers</p>
          <p class="text-3xl font-bold text-gray-900 mt-1">{{ totalSoldFlowers }}</p>
          <p class="text-xs text-gray-400 mt-1">Currently out of stock</p>
        </div>
        <div class="h-12 w-12 rounded-lg bg-rose-100 flex items-center justify-center">
          <i class="fas fa-archive text-2xl text-rose-600"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-indigo-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-500">Total Units Sold</p>
          <p class="text-3xl font-bold text-gray-900 mt-1">{{ totalUnitsSold }}</p>
          <p class="text-xs text-gray-400 mt-1">Across all flowers (all time)</p>
        </div>
        <div class="h-12 w-12 rounded-lg bg-indigo-100 flex items-center justify-center">
          <i class="fas fa-shopping-cart text-2xl text-indigo-600"></i>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-emerald-500">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-500">Total Revenue</p>
          <p class="text-3xl font-bold text-gray-900 mt-1">₱{{ totalRevenue|number_format(2) }}</p>
          <p class="text-xs text-gray-400 mt-1">From all flower sales</p>
        </div>
        <div class="h-12 w-12 rounded-lg bg-emerald-100 flex items-center justify-center">
          <i class="fas fa-peso-sign text-2xl text-emerald-600"></i>
        </div>
      </div>
    </div>
  </div>

  {# ── Sold-Out Flowers Summary Table ── #}
  <div data-controller="floryn-table"
       data-floryn-table-page-size-value="10"
       data-floryn-table-sort-col-value="4"
       data-floryn-table-sort-dir-value="desc"
       data-floryn-table-no-sort-cols-value="[6]"
       data-floryn-table-entity-name-value="sold flowers">
  <div class="table-card mb-8">
    <div class="table-card-header">
      <h3><i class="fas fa-archive mr-2" style="color:#e11d48;"></i>Sold-Out Flower Summary</h3>
    </div>
    <div class="fg-toolbar">
      <div class="fg-toolbar-left">
        <select data-floryn-table-target="pageSize" data-action="floryn-table#onPageSizeChange" class="fg-page-size">
          <option value="10">10</option>
          <option value="25">25</option>
          <option value="-1">All</option>
        </select>
        <button type="button" class="fg-export-btn" data-action="floryn-table#exportCopy" title="Copy"><i class="fas fa-copy"></i></button>
        <button type="button" class="fg-export-btn" data-action="floryn-table#exportCsv" title="CSV"><i class="fas fa-file-csv"></i></button>
        <button type="button" class="fg-export-btn" data-action="floryn-table#exportExcel" title="Excel"><i class="fas fa-file-excel"></i></button>
        <button type="button" class="fg-export-btn" data-action="floryn-table#exportPrint" title="Print"><i class="fas fa-print"></i></button>
      </div>
      <div class="fg-toolbar-right">
        <div class="fg-search">
          <i class="fas fa-search fg-search-icon"></i>
          <input type="text" data-floryn-table-target="search" data-action="input->floryn-table#onSearch" placeholder="Search sold flowers..." class="fg-search-input">
        </div>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="fg-table" data-floryn-table-target="table">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Flower</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sold Out On</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Units Sold</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Revenue</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for flower in soldFlowers %}
            {% set stats = salesMap[flower.id] ?? null %}
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 text-sm font-medium text-gray-900">
                <div class="flex items-center gap-2">
                  <div class="h-8 w-8 rounded-lg bg-rose-100 flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-leaf text-rose-500 text-xs"></i>
                  </div>
                  {{ flower.name }}
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-700">{{ flower.category }}</span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900 text-right">₱{{ flower.price|number_format(2) }}</td>
              <td class="px-6 py-4 text-sm text-gray-600">
                {% if flower.soldAt %}
                  {{ flower.soldAt|date('M d, Y') }}
                  <div class="text-xs text-gray-400">{{ date().diff(flower.soldAt).days }} days ago</div>
                {% else %}
                  <span class="text-gray-400">—</span>
                {% endif %}
              </td>
              <td class="px-6 py-4 text-sm text-right font-semibold text-gray-900">
                {{ stats ? stats.totalUnitsSold : '0' }}
              </td>
              <td class="px-6 py-4 text-sm text-right font-semibold text-emerald-600">
                ₱{{ stats ? stats.totalRevenue|number_format(2) : '0.00' }}
              </td>
              <td class="px-6 py-4 text-center">
                <a href="{{ path('app_flower_show', {'id': flower.id}) }}" class="inline-flex items-center px-3 py-1 text-xs font-medium rounded bg-gray-100 text-gray-700 hover:bg-gray-200 transition">
                  <i class="fas fa-eye mr-1"></i> View
                </a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                <i class="fas fa-check-circle text-green-400 text-3xl mb-2"></i>
                <p>No sold-out flowers. All inventory is active!</p>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="fg-footer" data-floryn-table-target="footer"></div>
  </div>
  </div>

  {# ── Recent Sales Detail Table ── #}
  <div data-controller="floryn-table"
       data-floryn-table-page-size-value="10"
       data-floryn-table-sort-col-value="4"
       data-floryn-table-sort-dir-value="desc"
       data-floryn-table-entity-name-value="sales">
  <div class="table-card">
    <div class="table-card-header">
      <h3><i class="fas fa-receipt mr-2" style="color:#6366f1;"></i>Recent Sale Line Items (Last 50)</h3>
    </div>
    <div class="fg-toolbar">
      <div class="fg-toolbar-left">
        <select data-floryn-table-target="pageSize" data-action="floryn-table#onPageSizeChange" class="fg-page-size">
          <option value="10">10</option>
          <option value="25">25</option>
          <option value="50">50</option>
        </select>
        <button type="button" class="fg-export-btn" data-action="floryn-table#exportCopy" title="Copy"><i class="fas fa-copy"></i></button>
        <button type="button" class="fg-export-btn" data-action="floryn-table#exportCsv" title="CSV"><i class="fas fa-file-csv"></i></button>
        <button type="button" class="fg-export-btn" data-action="floryn-table#exportPrint" title="Print"><i class="fas fa-print"></i></button>
      </div>
      <div class="fg-toolbar-right">
        <div class="fg-search">
          <i class="fas fa-search fg-search-icon"></i>
          <input type="text" data-floryn-table-target="search" data-action="input->floryn-table#onSearch" placeholder="Search sales..." class="fg-search-input">
        </div>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="fg-table" data-floryn-table-target="table">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Flower</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Qty</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Subtotal</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for sale in recentSales %}
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ sale.flowerName }}</td>
              <td class="px-6 py-4 text-sm text-gray-700">{{ sale.flowerCategory }}</td>
              <td class="px-6 py-4 text-sm text-gray-700">{{ sale.customerName ?? 'Walk-in' }}</td>
              <td class="px-6 py-4 text-sm text-gray-900 text-right">{{ sale.quantity }}</td>
              <td class="px-6 py-4 text-sm text-gray-600">
                {% if sale.dateReserved %}
                  {{ sale.dateReserved|date('M d, Y') }}
                {% else %}
                  —
                {% endif %}
              </td>
              <td class="px-6 py-4 text-sm text-right font-semibold text-emerald-600">₱{{ sale.subtotal|number_format(2) }}</td>
              <td class="px-6 py-4 text-center">
                {% if sale.reservationStatus == 'Completed' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Completed</span>
                {% elseif sale.reservationStatus == 'Pending' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">Pending</span>
                {% elseif sale.reservationStatus == 'Cancelled' %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Cancelled</span>
                {% else %}
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-700">{{ sale.reservationStatus }}</span>
                {% endif %}
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-gray-500">No sales data available yet.</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="fg-footer" data-floryn-table-target="footer"></div>
  </div>
  </div>
</div>
{% endblock %}
