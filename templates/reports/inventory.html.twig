{% extends 'base.html.twig' %}

{% block title %}Inventory Report - Floryn Garden{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto">
  {# Header #}
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-boxes text-blue-600 mr-3"></i>
        Inventory Report
      </h1>
      <p class="mt-1 text-gray-600">Stock levels, values, and freshness analysis</p>
    </div>
    <div class="flex gap-2">
      <a href="{{ path('app_reports_export_inventory_csv') }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm">
        <i class="fas fa-file-csv mr-2"></i> Export CSV
      </a>
      <a href="{{ path('app_reports_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition text-sm">
        <i class="fas fa-arrow-left mr-2"></i> Back
      </a>
    </div>
  </div>

  {# Summary Cards #}
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500">
      <p class="text-sm text-gray-500">Total Inventory Value</p>
      <p class="text-2xl font-bold text-green-600">₱{{ total_value|number_format(2) }}</p>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500">
      <p class="text-sm text-gray-500">Total Products</p>
      <p class="text-2xl font-bold text-blue-600">{{ flowers|length }}</p>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-yellow-500">
      <p class="text-sm text-gray-500">Low Stock Items</p>
      <p class="text-2xl font-bold text-yellow-600">{{ low_stock|length }}</p>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-red-500">
      <p class="text-sm text-gray-500">Expiring Soon</p>
      <p class="text-2xl font-bold text-red-600">{{ expiring_soon|length }}</p>
    </div>
  </div>

  {# By Category #}
  <div class="bg-white rounded-xl shadow-md overflow-hidden mb-8">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900"><i class="fas fa-tags mr-2 text-[#5E548E]"></i>By Category</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Varieties</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Total Stock</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Value</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for category, data in by_category %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ category }}</td>
            <td class="px-6 py-4 text-sm text-gray-700 text-right">{{ data.count }}</td>
            <td class="px-6 py-4 text-sm text-gray-700 text-right">{{ data.stock }}</td>
            <td class="px-6 py-4 text-sm text-gray-900 text-right font-medium">₱{{ data.value|number_format(2) }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

  {# Low Stock Alerts #}
  {% if low_stock|length > 0 %}
  <div class="bg-white rounded-xl shadow-md overflow-hidden mb-8 border-l-4 border-yellow-400">
    <div class="p-6 border-b border-gray-200 bg-yellow-50">
      <h2 class="text-lg font-semibold text-yellow-800"><i class="fas fa-exclamation-triangle mr-2"></i>Low Stock Alerts (< 5 units)</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Flower</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Stock</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Supplier</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for flower in low_stock %}
          <tr class="hover:bg-yellow-50">
            <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ flower.name }}</td>
            <td class="px-6 py-4 text-sm text-gray-700">{{ flower.category }}</td>
            <td class="px-6 py-4 text-sm text-right">
              <span class="inline-flex px-2 py-1 text-xs font-bold rounded-full {% if flower.stockQuantity == 0 %}bg-red-100 text-red-800{% else %}bg-yellow-100 text-yellow-800{% endif %}">
                {{ flower.stockQuantity }}
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">{{ flower.supplier ? flower.supplier.supplierName : 'N/A' }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  {% endif %}

  {# Full Inventory Table #}
  <div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900"><i class="fas fa-seedling mr-2 text-[#5E548E]"></i>All Flowers</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200" id="inventoryTable">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Price</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Stock</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Freshness</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Expiry</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for flower in flowers %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ flower.name }}</td>
            <td class="px-6 py-4 text-sm text-gray-700">{{ flower.category }}</td>
            <td class="px-6 py-4 text-sm text-right">
              {% if flower.discountPrice %}
                <span class="line-through text-gray-400">₱{{ flower.price|number_format(2) }}</span>
                <span class="text-red-600 font-medium ml-1">₱{{ flower.discountPrice|number_format(2) }}</span>
              {% else %}
                ₱{{ flower.price|number_format(2) }}
              {% endif %}
            </td>
            <td class="px-6 py-4 text-sm text-right font-medium">{{ flower.stockQuantity }}</td>
            <td class="px-6 py-4 text-center">
              <span class="inline-flex px-2 py-1 text-xs rounded-full {% if flower.freshnessStatus == 'Fresh' %}bg-green-100 text-green-800{% elseif flower.freshnessStatus == 'Good' %}bg-blue-100 text-blue-800{% elseif flower.freshnessStatus == 'Last Sale' %}bg-yellow-100 text-yellow-800{% else %}bg-red-100 text-red-800{% endif %}">
                {{ flower.freshnessStatus }}
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">{{ flower.expiryDate ? flower.expiryDate|date('M d, Y') : '—' }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
