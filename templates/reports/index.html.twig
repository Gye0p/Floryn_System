{% extends 'base.html.twig' %}

{% block title %}Reports Dashboard - Floryn Garden{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto">
  {# Header #}
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 flex items-center">
      <i class="fas fa-chart-bar text-[#293855] mr-3"></i>
      Reports Dashboard
    </h1>
    <p class="mt-2 text-gray-600">Generate and export comprehensive business reports</p>
  </div>

  {# Report Cards Grid #}
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    {# Sales Report Card #}
    <a href="{{ path('app_reports_sales') }}" class="group">
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-green-500">
        <div class="flex items-center justify-between mb-4">
          <div class="h-12 w-12 rounded-lg bg-green-100 flex items-center justify-center">
            <i class="fas fa-dollar-sign text-2xl text-green-600"></i>
          </div>
          <i class="fas fa-arrow-right text-gray-400 group-hover:text-[#293855] transition-colors"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Sales Report</h3>
        <p class="text-sm text-gray-600">Revenue, orders, and payment analytics</p>
      </div>
    </a>

    {# Inventory Report Card #}
    <a href="{{ path('app_reports_inventory') }}" class="group">
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-blue-500">
        <div class="flex items-center justify-between mb-4">
          <div class="h-12 w-12 rounded-lg bg-blue-100 flex items-center justify-center">
            <i class="fas fa-boxes text-2xl text-blue-600"></i>
          </div>
          <i class="fas fa-arrow-right text-gray-400 group-hover:text-[#293855] transition-colors"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Inventory Report</h3>
        <p class="text-sm text-gray-600">Stock levels, value, and categories</p>
      </div>
    </a>

    {# Customer Report Card #}
    <a href="{{ path('app_reports_customers') }}" class="group">
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-purple-500">
        <div class="flex items-center justify-between mb-4">
          <div class="h-12 w-12 rounded-lg bg-purple-100 flex items-center justify-center">
            <i class="fas fa-users text-2xl text-purple-600"></i>
          </div>
          <i class="fas fa-arrow-right text-gray-400 group-hover:text-[#293855] transition-colors"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Customer Report</h3>
        <p class="text-sm text-gray-600">Top customers and spending analysis</p>
      </div>
    </a>

    {# Supplier Report Card #}
    <a href="{{ path('app_reports_suppliers') }}" class="group">
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-orange-500">
        <div class="flex items-center justify-between mb-4">
          <div class="h-12 w-12 rounded-lg bg-orange-100 flex items-center justify-center">
            <i class="fas fa-truck text-2xl text-orange-600"></i>
          </div>
          <i class="fas fa-arrow-right text-gray-400 group-hover:text-[#293855] transition-colors"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Supplier Report</h3>
        <p class="text-sm text-gray-600">Supplier performance and inventory</p>
      </div>
    </a>

    {# Top Sellers Report Card #}
    <a href="{{ path('app_reports_top_sellers') }}" class="group">
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-yellow-500">
        <div class="flex items-center justify-between mb-4">
          <div class="h-12 w-12 rounded-lg bg-yellow-100 flex items-center justify-center">
            <i class="fas fa-trophy text-2xl text-yellow-600"></i>
          </div>
          <i class="fas fa-arrow-right text-gray-400 group-hover:text-[#293855] transition-colors"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Top Sellers</h3>
        <p class="text-sm text-gray-600">Best-selling flowers by volume</p>
      </div>
    </a>

    {# Sold Flower History Card #}
    <a href="{{ path('app_reports_sold_flower_history') }}" class="group">
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-rose-500">
        <div class="flex items-center justify-between mb-4">
          <div class="h-12 w-12 rounded-lg bg-rose-100 flex items-center justify-center">
            <i class="fas fa-history text-2xl text-rose-600"></i>
          </div>
          <i class="fas fa-arrow-right text-gray-400 group-hover:text-[#293855] transition-colors"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Sold Flower History</h3>
        <p class="text-sm text-gray-600">Sold-out flowers, units sold &amp; revenue</p>
      </div>
    </a>
  </div>

  {# Quick Stats #}
  <div class="bg-[#293855] rounded-xl shadow-lg p-8 text-white">
    <h2 class="text-2xl font-bold mb-6">Quick Export Options</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <a href="{{ path('app_reports_export_sales_csv') }}" 
         class="flex items-center justify-between bg-white/10 hover:bg-white/20 rounded-lg p-4 transition-colors">
        <div class="flex items-center">
          <i class="fas fa-file-csv text-2xl mr-3"></i>
          <span class="font-medium">Export Sales (CSV)</span>
        </div>
        <i class="fas fa-download"></i>
      </a>
      
      <a href="{{ path('app_reports_export_inventory_csv') }}" 
         class="flex items-center justify-between bg-white/10 hover:bg-white/20 rounded-lg p-4 transition-colors">
        <div class="flex items-center">
          <i class="fas fa-file-csv text-2xl mr-3"></i>
          <span class="font-medium">Export Inventory (CSV)</span>
        </div>
        <i class="fas fa-download"></i>
      </a>

      <a href="{{ path('app_reports_export_customers_csv') }}" 
         class="flex items-center justify-between bg-white/10 hover:bg-white/20 rounded-lg p-4 transition-colors">
        <div class="flex items-center">
          <i class="fas fa-file-csv text-2xl mr-3"></i>
          <span class="font-medium">Export Customers (CSV)</span>
        </div>
        <i class="fas fa-download"></i>
      </a>

      <a href="{{ path('app_reports_export_suppliers_csv') }}" 
         class="flex items-center justify-between bg-white/10 hover:bg-white/20 rounded-lg p-4 transition-colors">
        <div class="flex items-center">
          <i class="fas fa-file-csv text-2xl mr-3"></i>
          <span class="font-medium">Export Suppliers (CSV)</span>
        </div>
        <i class="fas fa-download"></i>
      </a>
    </div>
  </div>

  {# Info Cards #}
  <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
      <div class="flex items-start">
        <i class="fas fa-info-circle text-blue-600 text-xl mr-3 mt-1"></i>
        <div>
          <h4 class="font-semibold text-blue-900 mb-2">Sales Reports</h4>
          <p class="text-sm text-blue-700">Track revenue, order trends, and payment status over time periods</p>
        </div>
      </div>
    </div>

    <div class="bg-purple-50 border border-purple-200 rounded-lg p-6">
      <div class="flex items-start">
        <i class="fas fa-chart-pie text-purple-600 text-xl mr-3 mt-1"></i>
        <div>
          <h4 class="font-semibold text-purple-900 mb-2">Analytics</h4>
          <p class="text-sm text-purple-700">View detailed breakdowns by category, customer, and supplier</p>
        </div>
      </div>
    </div>

    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
      <div class="flex items-start">
        <i class="fas fa-download text-green-600 text-xl mr-3 mt-1"></i>
        <div>
          <h4 class="font-semibold text-green-900 mb-2">Export Data</h4>
          <p class="text-sm text-green-700">Download reports in CSV format for further analysis</p>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
