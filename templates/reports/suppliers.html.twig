{% extends 'base.html.twig' %}

{% block title %}Supplier Report - Floryn Garden{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto">
  {# Header #}
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-truck text-orange-600 mr-3"></i>
        Supplier Report
      </h1>
      <p class="mt-1 text-gray-600">Supplier performance and inventory contributions</p>
    </div>
    <div class="flex gap-2">
      <a href="{{ path('app_reports_export_suppliers_csv') }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-sm">
        <i class="fas fa-file-csv mr-2"></i> Export CSV
      </a>
      <a href="{{ path('app_reports_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition text-sm">
        <i class="fas fa-arrow-left mr-2"></i> Back
      </a>
    </div>
  </div>

  {# Summary #}
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-orange-500">
      <p class="text-sm text-gray-500">Total Suppliers</p>
      <p class="text-2xl font-bold text-orange-600">{{ total_suppliers }}</p>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-blue-500">
      <p class="text-sm text-gray-500">Total Flower Varieties</p>
      {% set total_varieties = 0 %}
      {% for stat in supplier_stats %}
        {% set total_varieties = total_varieties + stat.flower_count %}
      {% endfor %}
      <p class="text-2xl font-bold text-blue-600">{{ total_varieties }}</p>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-green-500">
      <p class="text-sm text-gray-500">Total Inventory Value</p>
      {% set total_value = 0 %}
      {% for stat in supplier_stats %}
        {% set total_value = total_value + stat.inventory_value %}
      {% endfor %}
      <p class="text-2xl font-bold text-green-600">₱{{ total_value|number_format(2) }}</p>
    </div>
  </div>

  {# Supplier Table #}
  <div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900"><i class="fas fa-building mr-2 text-[#5E548E]"></i>Supplier Details</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200" id="supplierTable">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Supplier</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Contact</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Phone</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Flowers</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Total Stock</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Inventory Value</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          {% for stat in supplier_stats %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ stat.supplier.supplierName }}</td>
            <td class="px-6 py-4 text-sm text-gray-700">{{ stat.supplier.contactPerson }}</td>
            <td class="px-6 py-4 text-sm text-gray-500">{{ stat.supplier.phone }}</td>
            <td class="px-6 py-4 text-sm text-gray-700 text-right">{{ stat.flower_count }}</td>
            <td class="px-6 py-4 text-sm text-gray-700 text-right">{{ stat.total_stock }}</td>
            <td class="px-6 py-4 text-sm text-gray-900 text-right font-semibold">₱{{ stat.inventory_value|number_format(2) }}</td>
          </tr>
          {% else %}
          <tr>
            <td colspan="6" class="px-6 py-12 text-center text-gray-500">No suppliers found.</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
