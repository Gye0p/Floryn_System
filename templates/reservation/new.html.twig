{% extends 'base.html.twig' %}

{% block title %}New Reservation - Floryn Garden{% endblock %}
{% block page_title %}Create New Reservation{% endblock %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
  <!-- Breadcrumb -->
  <div class="mb-6">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <a href="{{ path('admin_dashboard') }}" class="text-gray-400 hover:text-gray-500">
            <i class="fas fa-home"></i>
          </a>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <a href="{{ path('app_reservation_index') }}" class="text-sm font-medium text-gray-500 hover:text-gray-700">Reservations</a>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <span class="text-sm font-medium text-gray-500">New Reservation</span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="mt-4">
      <h1 class="text-2xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-calendar-plus text-purple-600 mr-3"></i>
        Create New Reservation
      </h1>
      <p class="mt-2 text-sm text-gray-600">Enter reservation details to create a new flower order.</p>
    </div>
  </div>

  <!-- Form -->
  <div class="max-w-4xl">
    <div class="bg-white rounded-lg shadow-lg p-8 border border-gray-200">
      {{ include('reservation/_form.html.twig', {button_label: 'Create Reservation'}) }}
    </div>
  </div>
</div>
{% endblock %}
