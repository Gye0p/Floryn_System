{% extends 'base.html.twig' %}

{% block title %}Edit Reservation #{{ reservation.id }} - Floryn Garden{% endblock %}
{% block page_title %}Edit Reservation{% endblock %}

{% block body %}
<div class="page-wrapper px-4 sm:px-6 lg:px-8">
  <nav class="breadcrumb">
    <a href="{{ path('admin_dashboard') }}"><i class="fas fa-home"></i></a>
    <span class="separator">/</span>
    <a href="{{ path('app_reservation_index') }}">Reservations</a>
    <span class="separator">/</span>
    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">#{{ reservation.id }}</a>
    <span class="separator">/</span>
    <span class="current">Edit</span>
  </nav>

  <div class="page-header">
    <div class="page-header-info">
      <div class="avatar md" style="background:linear-gradient(135deg,#9b59b6,#8e44ad);"><i class="fas fa-receipt" style="font-size:18px;"></i></div>
      <div>
        <h1>Edit Reservation #{{ reservation.id }}</h1>
        <p class="subtitle">Update reservation details and order information.</p>
      </div>
    </div>
    <div class="page-header-actions">
      <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-outline"><i class="fas fa-eye"></i> View Details</a>
    </div>
  </div>

  <div style="max-width:1000px;">
    {{ include('reservation/_form.html.twig', {button_label: 'Update Reservation'}) }}

    <div class="danger-zone">
      <div class="danger-zone-header">
        <i class="fas fa-exclamation-triangle"></i>
        <div>
          <h4>Danger Zone</h4>
          <p>Permanently delete this reservation. Stock quantities will be restored for all items in this order.</p>
        </div>
      </div>
      <div class="danger-zone-body">
        {{ include('reservation/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
</div>
{% endblock %}