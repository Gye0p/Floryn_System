{{ form_start(form, {'attr': {'class': 'form-section', 'novalidate': 'novalidate'}}) }}

  <div class="form-section-header">
    <div class="section-icon blue"><i class="fas fa-leaf"></i></div>
    <h3>Flower Information</h3>
  </div>

  <div class="form-section-body">
    <div class="form-grid">
      <div class="form-group">
        {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1.5'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'w-full rounded-lg border border-gray-200 px-3.5 py-2.5 text-sm focus:border-[#4265d6] focus:ring-[#4265d6] transition', 'placeholder': 'Enter flower name'}}) }}
        {{ form_errors(form.name) }}
      </div>
      <div class="form-group">
        {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1.5'}}) }}
        {{ form_widget(form.category, {'attr': {'class': 'w-full rounded-lg border border-gray-200 px-3.5 py-2.5 text-sm focus:border-[#4265d6] focus:ring-[#4265d6] transition', 'placeholder': 'e.g., Rose, Tulip, Lily'}}) }}
        {{ form_errors(form.category) }}
      </div>
      <div class="form-group">
        {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1.5'}}) }}
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none">
            <span class="text-gray-400 text-sm font-medium">â‚±</span>
          </div>
          {{ form_widget(form.price, {'attr': {'class': 'w-full pl-8 rounded-lg border border-gray-200 px-3.5 py-2.5 text-sm focus:border-[#4265d6] focus:ring-[#4265d6] transition', 'placeholder': '0.00', 'step': '0.01', 'type': 'number'}}) }}
        </div>
        {{ form_errors(form.price) }}
      </div>
      <div class="form-group">
        {{ form_label(form.stockQuantity, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1.5'}}) }}
        {{ form_widget(form.stockQuantity, {'attr': {'class': 'w-full rounded-lg border border-gray-200 px-3.5 py-2.5 text-sm focus:border-[#4265d6] focus:ring-[#4265d6] transition', 'placeholder': 'Enter quantity', 'min': '0'}}) }}
        {{ form_errors(form.stockQuantity) }}
      </div>
      <div class="form-group">
        {{ form_label(form.dateReceived, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1.5'}}) }}
        {{ form_widget(form.dateReceived, {'attr': {'class': 'w-full rounded-lg border border-gray-200 px-3.5 py-2.5 text-sm focus:border-[#4265d6] focus:ring-[#4265d6] transition'}}) }}
        {{ form_errors(form.dateReceived) }}
      </div>
      <div class="form-group">
        {{ form_label(form.expiryDate, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1.5'}}) }}
        {{ form_widget(form.expiryDate, {'attr': {'class': 'w-full rounded-lg border border-gray-200 px-3.5 py-2.5 text-sm focus:border-[#4265d6] focus:ring-[#4265d6] transition'}}) }}
        {{ form_errors(form.expiryDate) }}
      </div>
    </div>

    <div class="form-info-banner">
      <i class="fas fa-info-circle"></i>
      <div>
        <h4>Automatic Freshness Tracking</h4>
        <p>Freshness status is calculated automatically based on the expiry date. A 20% discount is applied to "Last Sale" flowers.</p>
      </div>
    </div>

    <div class="form-group full mt-5">
      {{ form_label(form.supplier, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1.5'}}) }}
      {{ form_widget(form.supplier, {'attr': {'class': 'w-full rounded-lg border border-gray-200 px-3.5 py-2.5 text-sm focus:border-[#4265d6] focus:ring-[#4265d6] transition'}}) }}
      {{ form_errors(form.supplier) }}
    </div>
  </div>

  <div class="form-actions">
    <a href="{{ path('app_flower_index') }}" class="btn btn-outline"><i class="fas fa-times"></i> Cancel</a>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('Save Flower') }}</button>
  </div>

{{ form_rest(form) }}
{{ form_end(form) }}