{{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate'}}) }}
<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="px-6 py-4 bg-gradient-to-r from-emerald-50 to-teal-50 border-b border-emerald-200">
    <h3 class="text-lg font-medium text-emerald-900 flex items-center">
      <i class="fas fa-leaf mr-2 text-emerald-600"></i>
      Flower Information
    </h3>
  </div>
  
  <div class="px-6 py-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Name Field -->
      <div>
        {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.name, {
          'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm',
            'placeholder': 'Enter flower name'
          }
        }) }}
        {{ form_errors(form.name) }}
      </div>

      <!-- Category Field -->
      <div>
        {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.category, {
          'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm',
            'placeholder': 'e.g., Rose, Tulip, Lily'
          }
        }) }}
        {{ form_errors(form.category) }}
      </div>

      <!-- Price Field -->
      <div>
        {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        <div class="mt-1 relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">$</span>
          </div>
          {{ form_widget(form.price, {
            'attr': {
              'class': 'block w-full pl-7 rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm',
              'placeholder': '0.00',
              'step': '0.01'
            }
          }) }}
        </div>
        {{ form_errors(form.price) }}
      </div>

      <!-- Stock Quantity Field -->
      <div>
        {{ form_label(form.stockQuantity, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.stockQuantity, {
          'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm',
            'placeholder': 'Enter quantity',
            'min': '0'
          }
        }) }}
        {{ form_errors(form.stockQuantity) }}
      </div>

      <!-- Status Field -->
      <div>
        {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.status, {
          'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm'
          }
        }) }}
        {{ form_errors(form.status) }}
      </div>

      <!-- Date Received Field -->
      <div>
        {{ form_label(form.dateReceived, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.dateReceived, {
          'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm'
          }
        }) }}
        {{ form_errors(form.dateReceived) }}
      </div>

      <!-- Expiry Date Field -->
      <div>
        {{ form_label(form.expiryDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.expiryDate, {
          'attr': {
            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm'
          }
        }) }}
        {{ form_errors(form.expiryDate) }}
      </div>
    </div>

    <!-- Freshness Status Info -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex items-start">
        <i class="fas fa-info-circle text-blue-600 mr-3 mt-0.5"></i>
        <div>
          <h4 class="text-sm font-semibold text-blue-800">Automatic Freshness Tracking</h4>
          <p class="text-sm text-blue-700 mt-1">
            Freshness status (Fresh, Good, Last Sale, Expired) is calculated automatically based on the expiry date. 
            Discounts are applied automatically to flowers in "Last Sale" status (20% off).
          </p>
        </div>
      </div>
    </div>

    <!-- Supplier Field (Full width) -->
    <div class="mt-6">
      {{ form_label(form.supplier, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
      {{ form_widget(form.supplier, {
        'attr': {
          'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm'
        }
      }) }}
      {{ form_errors(form.supplier) }}
    </div>
  </div>

  <!-- Form Actions -->
  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
    <a href="{{ path('app_flower_index') }}" 
       class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200">
      <i class="fas fa-times mr-2"></i>
      Cancel
    </a>
    
    <button type="submit" 
            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200">
      <i class="fas fa-save mr-2"></i>
      {{ button_label|default('Save Flower') }}
    </button>
  </div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}
