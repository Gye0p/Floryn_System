<form method="post" action="{{ path('app_flower_delete', {'id': flower.id}) }}" onsubmit="return confirm('Are you sure you want to delete this flower? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flower.id) }}">
    <button type="submit" 
            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
      <i class="fas fa-trash-alt mr-2"></i>
      Delete Flower
    </button>
</form>
