<form method="post" action="{{ path('app_flower_delete', {'id': flower.id}) }}"
      data-controller="confirm"
      data-confirm-message-value="Are you sure you want to delete this flower? This action cannot be undone."
      data-action="submit->confirm#ask">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flower.id) }}">
  <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete This Flower</button>
</form>