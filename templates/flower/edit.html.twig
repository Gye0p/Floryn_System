{% extends 'base.html.twig' %}

{% block title %}Edit {{ flower.name }} - Floryn Garden{% endblock %}
{% block page_title %}Edit Flower{% endblock %}

{% block body %}
<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <div>
            <a href="{{ path('admin_dashboard') }}" class="text-gray-400 hover:text-gray-500">
              <i class="fas fa-home"></i>
              <span class="sr-only">Home</span>
            </a>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <a href="{{ path('app_flower_index') }}" class="text-sm font-medium text-gray-500 hover:text-gray-700">Flowers</a>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <a href="{{ path('app_flower_show', {'id': flower.id}) }}" class="text-sm font-medium text-gray-500 hover:text-gray-700">{{ flower.name }}</a>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <i class="fas fa-chevron-right text-gray-400 mr-4"></i>
            <span class="text-sm font-medium text-gray-500">Edit</span>
          </div>
        </li>
      </ol>
    </nav>
    
    <div class="mt-4">
      <h1 class="text-2xl font-bold text-gray-900 flex items-center">
        <i class="fas fa-edit text-blue-600 mr-3"></i>
        Edit "{{ flower.name }}"
      </h1>
      <p class="mt-2 text-sm text-gray-600">Update the flower information and inventory details.</p>
    </div>
  </div>

  <!-- Form and Actions -->
  <div class="max-w-4xl">
    {{ include('flower/_form.html.twig', {'button_label': 'Update Flower'}) }}
    
    <!-- Danger Zone -->
    <div class="mt-8">
      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <h3 class="text-lg font-medium text-red-900 mb-2 flex items-center">
          <i class="fas fa-exclamation-triangle text-red-600 mr-2"></i>
          Danger Zone
        </h3>
        <p class="text-sm text-red-700 mb-4">
          Once you delete a flower, there is no going back. Please be certain.
        </p>
        {{ include('flower/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
