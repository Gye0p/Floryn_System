{% extends 'base.html.twig' %}

{% block title %}Edit {{ flower.name }} - Floryn Garden{% endblock %}
{% block page_title %}Edit Flower{% endblock %}

{% block body %}
<div class="page-wrapper px-4 sm:px-6 lg:px-8">
  <div class="breadcrumb">
    <a href="{{ path('admin_dashboard') }}"><i class="fas fa-home"></i></a>
    <span class="separator"><i class="fas fa-chevron-right"></i></span>
    <a href="{{ path('app_flower_index') }}">Flowers</a>
    <span class="separator"><i class="fas fa-chevron-right"></i></span>
    <a href="{{ path('app_flower_show', {'id': flower.id}) }}">{{ flower.name }}</a>
    <span class="separator"><i class="fas fa-chevron-right"></i></span>
    <span class="current">Edit</span>
  </div>

  <div class="page-header">
    <div class="page-header-info">
      <h1><div class="avatar sm" style="background:linear-gradient(135deg,#4265d6,#6b85e0);"><i class="fas fa-edit" style="font-size:14px;"></i></div> Edit "{{ flower.name }}"</h1>
      <p class="subtitle">Update the flower information and inventory details.</p>
    </div>
  </div>

  <div class="max-w-4xl">
    {{ include('flower/_form.html.twig', {'button_label': 'Update Flower'}) }}

    <div class="danger-zone">
      <div class="danger-zone-header">
        <i class="fas fa-exclamation-triangle"></i>
        <h3>Danger Zone</h3>
      </div>
      <div class="danger-zone-body">
        <p>Once you delete a flower, there is no going back. Please be certain.</p>
        {{ include('flower/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
</div>
{% endblock %}