# Floryn Garden Flower Shop System - Environment Configuration
# Copy this file to .env.local and fill in your values

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=http://localhost
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# MySQL database connection
DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3309/floryn_garden_db?serverVersion=8.0.32&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
# Use null://null for development (no real emails sent)
# Use smtp://user:pass@smtp.example.com:587 for production
MAILER_DSN=null://null
###< symfony/mailer ###

# Docker MySQL credentials
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=floryn_garden_db
MYSQL_USER=db_user
MYSQL_PASSWORD=db_password

###> lexik/jwt-authentication-bundle ###
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=CHANGE_THIS_PASSPHRASE
###< lexik/jwt-authentication-bundle ###

###> knpuniversity/oauth2-client-bundle ###
# Get these from https://console.developers.google.com (APIs & Services > Credentials > OAuth 2.0 Client IDs)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
###< knpuniversity/oauth2-client-bundle ###
